<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_itemfile_infolder"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_thumnail_files"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:foreground="@color/background_dialog_review_capture"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pdf" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="14dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_height="14dp"
            android:layout_alignRight="@id/image_thumnail_files"
            android:gravity="center"
            android:id="@+id/checkbox_thumnailfiles"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:button="@color/white"
            android:background="@drawable/checkbox_selector"
            android:visibility="visible"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>