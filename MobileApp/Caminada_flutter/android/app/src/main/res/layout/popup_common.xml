<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_round_corner_16"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgHeaderIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/ic_standard_status_info" />

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notice"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/grey_accent" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBlackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/blue_dark"
        android:textSize="16dp"
        tools:text="• 3 documents have been uploaded to server" />

    <TextView
        android:id="@+id/tvRedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="13dp"
        android:textColor="@color/red_dark"
        android:textSize="16dp"
        tools:text="• 1 document failed" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_accent" />

    <LinearLayout
        android:id="@+id/lnFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/bg_white_round_bottom_left_corner"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvOK"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_dark_round_bottom_right_corner"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="@string/note_ok_button"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>
