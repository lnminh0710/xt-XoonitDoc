{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "target": "es5",
        "importHelpers": true,
        "types": [
            "jest",
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "plugins": [
            {
                "name": "tslint-language-service",
                "disableNoUnusedVariableRule": false
            }
        ],
        "paths": {
            "@xn-control/*": [ "src/app/shared/components/xn-control/*" ],
            "@widget/*": [ "src/app/shared/components/widget/*" ],
            "@app/*": [ "src/app/*" ]
        }
    },
    "angularCompilerOptions": {
        "enableIvy": false,
        "fullTemplateTypeCheck": false,
        "strictInjectionParameters": true,
        "disableTypeScriptVersionCheck": true
    }
}
